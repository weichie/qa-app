<!DOCTYPE html>
<html lang="nl" ng-app="qaApp">
<head>
  	<!-- Standardzz -->
  	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
	
	<!-- Stylezz -->
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css'>
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Angular -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
	<script src="/javascripts/qa-app.js"></script>
</head>
<body>
	<div class="content container">
    	<ui-view></ui-view>
	</div><!-- ./content container -->

    <!-- Scriptzz -->
    <script src="/javascripts/jquery-1.12.3.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/custom.js"></script>


    <script type="text/ng-template" id="/home.html">
	    <div class="page-header">
	    	<h1>Vragen</h1>
			<ul class="vragenlijst">
				<li ng-repeat="quest in q | orderBy: '-upvotes'">
					<h3><a href="/#/question/{{ quest._id }}">{{ quest.title }}</a></h3>
					<ul class="voting">
						<li>{{ quest.upvotes }}</li>
						<li>
							<a href="#!" ng-click="plusOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
							</a>
						</li>
						<li>
							<a href="#!" ng-click="minOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
							</a>
						</li>
					</ul>
					<a href="{{ quest.link }}">{{quest.link}}</a><br>
					{{ quest.body }}
				</li>
			</ul>
	    </div><!-- ./page-header -->

		<form class="form-inline" ng-submit="addQuestion()">
			<div class="form-group">
				<input type="text" class="form-control" ng-model="title" placeholder="title">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" ng-model="link" placeholder="link">
			</div>
			<button type="submit" class="btn btn-primary btn-sm">add post</button>
		</form>
	</script>

	<script type="text/ng-template" id="/question.html">
		<div class="page-header">
			<h1>{{ question.title }}</h1>
      		<p>{{ question.body }}</p>
		</div>
	</script>

</body>
</html>
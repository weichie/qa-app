<!DOCTYPE html>
<html lang="nl" ng-app="qaApp">
<head>
  	<!-- Standardzz -->
  	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
	
	<!-- Stylezz -->
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css'>
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Angular -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
	<script src="/javascripts/qa-app.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-default" ng-controller="NavCtrl">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#/home.html">Q&A - App</a>
				</div>

				<div class="collapse navbar-collapse" id="menu">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="#">Link</a></li>
						<li ng-show="isLoggedIn()" class="camelCase"><a href="#!">{{ currentUser() }}</a></li>
      					<li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
      					<li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
      					<li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
	</header>

	<div class="content container">
		<div class="col-xs-12 col-md-8 main-content">
    		<ui-view></ui-view>
    	</div><!-- ./main-content -->
	</div><!-- ./content container -->

    <!-- Scriptzz -->
    <script src="/javascripts/jquery-1.12.3.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/custom.js"></script>


    <script type="text/ng-template" id="/home.html">
    	<section class="trending">
	    	<h2>Trending questions <span class="pull-right">top 10 questions</span></h2>
			<ul class="vragenlijst">
				<li ng-repeat="quest in q | orderBy: '-upvotes'">
					<h3>
						<a href="/#/question/{{ quest._id }}">{{ quest.title }}</a>
					</h3>
					<!--
					<ul class="voting">
						<li>{{ quest.upvotes }}</li>
						<li>
							<a href="#!" ng-click="plusOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
							</a>
						</li>
						<li>
							<a href="#!" ng-click="minOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
							</a>
						</li>
					</ul>
					<a href="{{ quest.link }}">{{quest.link}}</a><br>
					{{ quest.body }}
					-->
				</li>
			</ul>
		</section><!-- ./trending -->

		<section class="latest">
	    	<h2>Latest questions <a href="#!" class="pull-right">see all <i class="fa fa-angle-double-right"></i></a></h2>
			<ul class="vragenlijst">
				<li ng-repeat="quest in q | orderBy: '-upvotes'">
					<h3>
						<a href="/#/question/{{ quest._id }}">{{ quest.title }}</a>
					</h3>
					<p>
						By Weichie &middot; 119 comments &middot; <span class="orange">1 minute ago</span>
					</p>
					<span ng-show="post.author">
							posted by <a>{{post.author}}</a> |
					</span>
					<!--
					<ul class="voting">
						<li>{{ quest.upvotes }}</li>
						<li>
							<a href="#!" ng-click="plusOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
							</a>
						</li>
						<li>
							<a href="#!" ng-click="minOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
							</a>
						</li>
					</ul>
					<a href="{{ quest.link }}">{{quest.link}}</a><br>
					{{ quest.body }}
					-->
				</li>
			</ul>
		</section><!-- ./trending -->

		<form class="form-inline" ng-show="isLoggedIn()" ng-submit="addQuestion()">
			<div class="form-group">
				<input type="text" class="form-control" ng-model="title" placeholder="title">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" ng-model="link" placeholder="link">
			</div>
			<button type="submit" class="btn btn-primary btn-sm">add post</button>
		</form>

		<div ng-hide="isLoggedIn()">
			<h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a question.</h3>
		</div>
	</script>

	<script type="text/ng-template" id="/question.html">
		<div class="page-header">
			<h1>{{ question.title }}</h1>
      		<p>{{ question.body }}</p>
		</div>

		<div ng-repeat="answer in question.answers | orderBy:'-upvotes'">
			<ul class="voting">
				<li>{{ answer.upvotes }}</li>
				<li>
					<a href="/#/question/{{ question._id }}" ng-click="plusOne(question, answer)" class="upvotes">
						<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
					</a>
				</li>
				<li>
					<a href="/#/question/{{ question._id }}" ng-click="minOne(question, answer)" class="upvotes">
						<i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
					</a>
				</li>
			</ul>

			- by {{answer.author}}
			<span style="font-size:20px; margin-left:10px;">
				{{answer.body}}
			</span>
		</div>

    	<form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
    		<h3>Add a new comment</h3>

    		<div class="form-group">
    			<input type="text" class="form-control" placeholder="Comment" ng-model="body"></input>
    		</div>
    		<button type="submit" class="btn btn-primary">Post</button>
		</form>
		
		<div ng-hide="isLoggedIn()">
			<h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a comment.</h3>
		</div>
	</script>

	<script type="text/ng-template" id="/register.html">
		<div class="page-header">
			<h1>Registratie</h1>
		</div>

		<div ng-show="error" class="alert alert-danger row">
			<span>{{ error.message }}</span>
		</div>

		<form ng-submit="register()" style="margin-top:30px;">
			<h3>Register</h3>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
	</script>

	<script type="text/ng-template" id="/login.html">
		<div class="page-header">
			<h1>Flapper News</h1>
		</div>

		<div ng-show="error" class="alert alert-danger row">
			<span>{{ error.message }}</span>
		</div>

		<form ng-submit="logIn()" style="margin-top:30px;">
			<h3>Log In</h3>

			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
			</div>
			<button type="submit" class="btn btn-primary">Log In</button>
		</form>
	</script>

</body>
</html>
<!DOCTYPE html>
<html lang="nl" ng-app="qaApp">
<head>
  	<!-- Standardzz -->
  	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
	
	<!-- Stylezz -->
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css'>
    <link rel='stylesheet' href='/stylesheets/font-awesome.min.css'>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Angular -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
	<script src="/javascripts/qa-app.js"></script>
</head>
<body>
	<div class="content container">
    	<ui-view></ui-view>
	</div><!-- ./content container -->

    <!-- Scriptzz -->
    <script src="/javascripts/jquery-1.12.3.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/custom.js"></script>


    <script type="text/ng-template" id="/home.html">
	    <div class="page-header">
	    	<h1>Vragen - {{ username }} - <a href="#" ng-click="logout()" ng-show="isLoggedIn">Logout</a> <a href="#/login" ng-hide="isLoggedIn">Login</a></h1>
			<ul class="vragenlijst">
				<li ng-repeat="quest in q | orderBy: '-upvotes'">
					<h3><a href="/#/question/{{ quest._id }}">{{ quest.title }}</a> 

          <span>
  <a href="#/question/{{ quest._id }}">Comments</a>
</span></h3>
					<ul class="voting">
						<li>{{ quest.upvotes }}</li>
						<li>
							<a href="#!" ng-click="plusOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
							</a>
						</li>
						<li>
							<a href="#!" ng-click="minOne(quest)" class="upvotes">
								<i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
							</a>
						</li>
					</ul>
					<a href="{{ quest.link }}">{{quest.link}}</a><br>
					{{ quest.body }}
				</li>
			</ul>
	    </div><!-- ./page-header -->

		<form class="form-inline" ng-submit="addQuestion()">
			<div class="form-group">
				<input type="text" class="form-control" ng-model="title" placeholder="title">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" ng-model="link" placeholder="link">
			</div>
			<button type="submit" class="btn btn-primary btn-sm">add post</button>
		</form>
	</script>

	<script type="text/ng-template" id="/question.html">
		<div class="page-header">
			<h1>{{ question.title }}</h1>
      		<p>{{ question.body }}</p>
		</div>


    <div ng-repeat="answer in question.answers | orderBy:'-upvotes'">
      <ul class="voting">
            <li>{{ answer.upvotes }}</li>
            <li>
              <a href="/#/question/{{ question._id }}" ng-click="plusOne(question, answer)" class="upvotes">
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
              </a>
            </li>
            <li>
              <a href="/#/question/{{ question._id }}" ng-click="minOne(question, answer)" class="upvotes">
                <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
              </a>
            </li>
          </ul>


        - by {{answer.author}}
      <span style="font-size:20px; margin-left:10px;">
        {{answer.body}}
      </span>
    </div>


    <form ng-submit="addComment()"
    style="margin-top:30px;">
    <h3>Add a new comment</h3>

    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Comment"
      ng-model="body"></input>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
  </form>
	</script>

	<script type="text/ng-template" id="/register.html">
		<div class="page-header">
			<h1>Registratie</h1>
		</div>

		<div ng-show="error" class="alert alert-danger row">
			<span>{{ error.message }}</span>
		</div>

		<form ng-submit="register()" style="margin-top:30px;">
			<h3>Register</h3>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
			</div>
			<button type="submit" class="btn btn-primary">Register</button>
		</form>
	</script>

	<script type="text/ng-template" id="/login.html">
		<div class="page-header">
			<h1>Flapper News</h1>
		</div>

		<div ng-show="error" class="alert alert-danger row">
			<span>{{ error.message }}</span>
		</div>

		<form ng-submit="logIn()" style="margin-top:30px;">
			<h3>Log In</h3>

			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
			</div>
			<button type="submit" class="btn btn-primary">Log In</button>
		</form>
	</script>

</body>
</html>